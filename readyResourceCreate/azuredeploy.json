{
    "$schema": "https://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json",
    "contentVersion": "1.0.0.0",
  "parameters": {
    "aagASPName": {
      "type": "string",
      "minLength": 1
    },
    "aagASPSkuName": {
      "type": "string",
      "defaultValue": "F1",
      "allowedValues": [
        "F1",
        "D1",
        "B1",
        "B2",
        "B3",
        "S1",
        "S2",
        "S3",
        "P1",
        "P2",
        "P3",
        "P4"
      ],
      "metadata": {
        "description": "Describes plan's pricing tier and capacity. Check details at https://azure.microsoft.com/en-us/pricing/details/app-service/"
      }
    }
    
  },
    "resources": [
      {
        "name": "[parameters('aagASPName')]",
        "type": "Microsoft.Web/serverfarms",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "sku": {
          "name": "[parameters('aagASPSkuName')]"
        },
        "dependsOn": [ ],
        "tags": {
          "displayName": "aagASP"
        },
        "properties": {
          "name": "[parameters('aagASPName')]",
          "numberOfWorkers": 1
        }
      },
      {
        "name": "[variables('web1Name')]",
        "type": "Microsoft.Web/sites",
        "location": "[resourceGroup().location]",
        "apiVersion": "2015-08-01",
        "dependsOn": [
          "[resourceId('Microsoft.Web/serverfarms', parameters('aagASPName'))]"
        ],
        "tags": {
          "[concat('hidden-related:', resourceId('Microsoft.Web/serverfarms', parameters('aagASPName')))]": "Resource",
          "displayName": "web1"
        },
        "properties": {
          "name": "[variables('web1Name')]",
          "serverFarmId": "[resourceId('Microsoft.Web/serverfarms', parameters('aagASPName'))]"
        }
      }
        
    ],
  "variables": {
    "web1Name": "[concat('web1', uniqueString(resourceGroup().id))]"
  }
}
